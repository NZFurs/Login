{
  "Argon2i": {
    "DegreeOfParallelism": 2,
    "Iterations": 40,
    "MemorySize": 8192,
    "HashSize": 128,
    "SaltSize": 64
  },
  "DefaultHostname": "login.furry.nz",
  "IdentityServer4": {
    "PublicOrigin": "https://login.furry.nz"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },
  "SendGrid": {
    "SenderEmailAddress": "notifications@furry.nz"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    }
  }
}